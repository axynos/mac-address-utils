{
  "env": {
    "browser": false,
    "node": true,
    "es6": true
  },
  "extends": "airbnb-base",
  "plugins": [
      "import"
  ],
  "rules": {
    "no-console": "off",
    "no-multi-spaces": "off",
    "valid-jsdoc": ["error", {
      "requireReturn": true,
      "requireReturnType": true,
      "requireParamDescription": true,
      "requireReturnDescription": true
    }],
    "require-jsdoc": ["error", {
        "require": {
            "FunctionDeclaration": true,
            "MethodDefinition": true,
            "ClassDeclaration": true
        }
    }]
  }
}
